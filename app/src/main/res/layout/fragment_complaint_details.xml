<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    tools:context=".ui.fragment.aftersale.AfterSaleDetailsFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:visibility="gone"
        >
        <ImageView
            style="@style/five_point_star_style"
            android:id="@+id/star1_id"

            />
        <ImageView
            style="@style/five_point_star_style"
            android:id="@+id/star2_id"
            />
        <ImageView
            style="@style/five_point_star_style"
            android:id="@+id/star3_id"
            />
        <ImageView
            style="@style/five_point_star_style"
            android:id="@+id/star4_id"
            />
        <ImageView
            style="@style/five_point_star_style"
            android:id="@+id/star5_id"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/evaluate_id"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:text="@string/vary_bad"
            android:textColor="@color/color_fec300"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_666666"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/complaint_reason_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/complaint_reason"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_666666"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/complaint_reason_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/complaint_reason"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_666666"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/complaint_reason_3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/complaint_reason"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_666666"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="具体投诉请联系木斗客服"
        android:gravity="center"
        />
</LinearLayout>