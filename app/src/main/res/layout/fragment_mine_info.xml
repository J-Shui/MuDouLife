<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.mine.MineInfoFragment">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/modou_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/avatar"
        android:id="@+id/avatar_img"
        />
    <include layout="@layout/layout_information_item"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/user_name_container"
        android:layout_below="@id/avatar_img"
        android:layout_marginTop="48dp"
        />
    <include layout="@layout/layout_information_item"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/password_container"
        android:layout_below="@id/user_name_container"
        android:visibility="gone"
        />
    <include layout="@layout/layout_information_item"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/phone_container"
        android:layout_below="@id/password_container"
        />
    <include layout="@layout/layout_information_item"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/weixin_container"
        android:layout_below="@id/phone_container"
        android:visibility="gone"
        />
    <include layout="@layout/layout_information_item"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/logout_container"
        android:layout_below="@id/weixin_container"
        android:visibility="gone"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_fec300"
        android:text="取消登录"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/logout_btn"
        />
</RelativeLayout>