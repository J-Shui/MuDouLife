<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    >
    <ImageView
        android:id="@+id/close_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/close"
        android:src="@mipmap/close_img" />
    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@mipmap/default_img"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_below="@id/close_img"-->
        <!--android:id="@+id/img_id"-->
        <!--/>-->
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/close_img"
        android:id="@+id/recycler_image_view"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_2"
        android:layout_below="@id/recycler_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deal_success"
        android:layout_below="@id/content_2"
        android:text="@string/deal_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_666666"
        android:id="@+id/line_id"
        android:layout_marginTop="16dp"
        android:layout_below="@id/deal_success"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payment_name"
        android:text="@string/payment_way"
        android:layout_below="@id/line_id"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payment_value"
        android:layout_below="@id/line_id"
        android:layout_toEndOf="@id/payment_name"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_number_name"
        android:text="@string/order_no"
        android:layout_below="@id/payment_name"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_number_value"
        android:layout_below="@id/payment_name"
        android:layout_toEndOf="@id/order_number_name"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deal_object_name"
        android:text="@string/deal_object"
        android:layout_below="@id/order_number_name"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deal_object_value"
        android:text="木斗生活"
        android:layout_below="@id/order_number_name"
        android:layout_toEndOf="@id/deal_object_name"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trans_time_name"
        android:text="@string/trans_time"
        android:layout_below="@id/deal_object_name"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trans_time_value"
        android:layout_below="@id/deal_object_name"
        android:layout_toEndOf="@id/trans_time_name"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/receive_time_name"
        android:text="@string/receive_time"
        android:layout_below="@id/trans_time_name"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/receive_time_value"
        android:layout_below="@id/trans_time_name"
        android:layout_toEndOf="@id/receive_time_name"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        />
</RelativeLayout>