<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.account.LoginActivity"
    >
    <!--<RelativeLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->
    <include layout="@layout/layout_login_tittle_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/tittle_container"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@mipmap/login_logo"
        android:id="@+id/login_logo"
        android:layout_below="@id/tittle_container"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/transparent"
        android:hint="@string/input_phone"
        android:textSize="15sp"
        android:textColorHint="@color/color_808080"
        android:textColor="@color/color_000000"
        android:id="@+id/edit_phone"
        android:layout_below="@id/login_logo"
        android:gravity="center_vertical"
        android:layout_marginTop="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_808080"
        android:id="@+id/line_account"
        android:layout_below="@id/edit_phone"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/code_container"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/line_account"
        >
        <Button
            android:layout_width="98dp"
            android:layout_height="31dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/register_code_bg"
            android:textColor="@color/color_666666"
            android:text="@string/click_send"
            android:id="@+id/send_code_btn"
            android:textSize="12sp"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/edit_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/input_code"
            android:background="@color/transparent"
            android:textSize="15sp"
            android:textColorHint="@color/color_808080"
            android:textColor="@color/color_000000"
            android:layout_toStartOf="@id/send_code_btn"
            android:imeOptions="actionDone"
            android:singleLine="true"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_808080"
        android:id="@+id/line_password"
        android:layout_below="@id/code_container"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/use_password"
        android:textSize="12sp"
        android:layout_marginTop="28dp"
        android:layout_below="@id/line_password"
        android:text="@string/use_password_login"
        android:textColor="@color/color_000000"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forget_password"
        android:textSize="12sp"
        android:layout_marginTop="28dp"
        android:layout_below="@id/line_password"
        android:text="@string/forget_password"
        android:textColor="@color/color_000000"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:background="@mipmap/login_btn_bg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:textColor="@color/color_ffffff"
        android:text="@string/login"
        android:textSize="15sp"
        android:id="@+id/login"
        />
    <!--</RelativeLayout>-->

</RelativeLayout>