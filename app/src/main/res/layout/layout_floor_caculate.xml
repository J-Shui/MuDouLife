<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="13dp"
    android:orientation="horizontal"
    android:gravity="center"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/number_reduce_img"
        android:id="@+id/floor_reduce"
        android:contentDescription="@string/reduce"
        />
    <TextView
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_box_bg"
        android:id="@+id/floor_value"
        android:text="12"
        android:textSize="10sp"
        android:gravity="center"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/number_add_img"
        android:id="@+id/floor_add"
        android:contentDescription="@string/add"
        />
</LinearLayout>