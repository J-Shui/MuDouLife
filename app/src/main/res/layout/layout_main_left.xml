<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/left_tab_background"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_order_container"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/left_order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left_order"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:layout_marginTop="16dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_list_dot_img"
            android:layout_gravity="center"
            android:id="@+id/left_order_img"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/left_look_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/look"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:layout_marginTop="16dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_list_left_line_img"
            android:id="@+id/left_order_line"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_price_container"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/left_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left_price"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:layout_marginTop="16dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_list_dot_img"
            android:layout_gravity="center"
            android:id="@+id/left_price_img"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/left_service_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:layout_marginTop="16dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_list_left_line_img"
            android:layout_gravity="center"
            android:id="@+id/left_price_line"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/left_account_Container"
        >
        <TextView
            android:id="@+id/left_complete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complete"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:layout_marginTop="16dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_list_dot_img"
            android:layout_gravity="center"
            android:id="@+id/left_account_img"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/left_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left_account"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:layout_marginTop="16dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_list_left_line_img"
            android:id="@+id/left_account_line"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>
</LinearLayout>